@model List<TopicViewModel>
<div class="col-lg-6 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Basic Table</h4>
            <p class="card-description">
                Add class <code>.table</code>
            </p>
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Name</td>
                                <td>
                                    <a class="btn btn-primary" asp-controller="topic" asp-action="details" asp-route-id="@item.Id">Details</a>
                                    <a class="btn btn-primary" asp-controller="topic" asp-action="update">Update</a>
                                    <a class="btn btn-warning" asp-controller="topic" asp-action="delete">Delete</a>
                                </td>
                                
                            </tr>
                        }
                       
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
